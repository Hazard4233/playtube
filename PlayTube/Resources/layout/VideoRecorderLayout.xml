
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
         <ImageView
            android:visibility="gone"
            android:layout_margin="20dp"
            android:layout_gravity="start"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imgThumbnail"
            android:background="@android:color/white"/>
         <ImageView
            android:visibility="gone"
           android:id="@+id/imgAudio"
            android:src="@drawable/audio_record"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <PlayTube.Helpers.AutoFitTextureView
            android:id="@+id/texture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
        
        <ImageView
            android:id="@+id/imgUpload"
            android:layout_margin="20dp"
            android:layout_gravity="end"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_upload"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/txtTime"
                android:alpha="0.5"
                android:background="@android:color/black"
                android:padding="10dp"
                android:textSize="15sp"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/relativeOption"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/imgSwitchCamera"
				    android:layout_height="40dp"
				    android:layout_width="40dp"
                    android:src="@drawable/switchcamera"/>
                <FrameLayout
                    android:layout_centerHorizontal="true"
			        android:layout_height="100dp"
			        android:layout_width="wrap_content"
			        android:id="@+id/framePlayPause">
			        <ImageView
                        android:layout_gravity="center"
				        android:layout_height="95dp"
				        android:layout_width="95dp"                           
				        android:gravity="center"
                        android:src="@drawable/outerellipse"
				        android:scaleType="fitXY"/>
			        <ImageView
                        android:layout_gravity="center"
				        android:layout_height="80dp"
				        android:layout_width="80dp"
				        android:gravity="center"
                        android:src="@drawable/innerellipse"
				        android:scaleType="fitXY"/>
			        <ImageView
                        android:layout_gravity="center"
				        android:layout_height="69.3dp"
				        android:layout_width="69.3dp"                           
				        android:gravity="center"
                        android:src="@drawable/bluecircle"
				        android:scaleType="fitXY"/>
			        <ImageView
                        android:id="@+id/imgPlayPauseMedia"
				        android:layout_height="18.3dp"
				        android:layout_width="13.3dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/whiteplay"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/txtStop"
                    android:alpha="0.5"
                    android:background="@android:color/black"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    android:text="STOP"
                    android:textColor="@android:color/white"
                    android:layout_gravity="bottom|end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
       
    </FrameLayout>
</LinearLayout>